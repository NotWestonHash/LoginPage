QuizManager
<QuizManager>:
    Question1Screen:
        name: "question one"
    Question2Screen:
        name: "question two"
    CorrectScreen:
        name: "correct"
    IncorrectScreen:
        name: "incorrect"

<CorrectScreen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "CORRECT"
            pos_hint:{x_center,0.5}
        Button:
            text: "<<Advance>>"
<IncorrectScreen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "INCORRECT"
            pos_hint:{x_center,0.5}
        Button:
            text: "<<Advance>>"
<Question1Screen>:

    BoxLayout:
        orientation:"vertical"
        spacing: 5
        Label:
            text: "What does Mello mean"
        BoxLayout:
            orientation: "horizontal"
            Button:
                text: "Mellow"
                on_release: root.answer_question(False)
            Button:
                text: "Mellophone"
                on_release: root.answer_question(True)
            Button:
                text: "Marshmello"
                on_release: root.answer_question(False)

<Question2Screen>:
    BoxLayout:
        orientation: "vertical"
        spacing: 5
        Label:
            text: "What is the full name of a contra?"
        TextInput:
            id: answer
            size_hint:0.5,0.1
            pos_hint: {"center_x":0.5}
        Button:
            text: "Enter"
            size_hint:0.5,0.1
            pos_hint:{"center_x":0.5}